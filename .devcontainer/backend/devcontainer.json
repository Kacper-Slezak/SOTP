{
    "name": "SOTP Backend Dev",

    // Wskazujemy na nasz istniejący plik docker-compose dla developmentu
    "dockerComposeFile": [
        "../../infrastructure/docker/docker-compose.dev.yml"
    ],

    // Określamy, do której usługi z pliku compose ma podłączyć się VS Code
    "service": "backend",

    // Ścieżka do folderu z kodem WEWNĄTRZ kontenera
    "workspaceFolder": "/workspace/apps",

    "mounts": [
        "type=bind,source=${localWorkspaceFolder}/apps/core-backend,target=/workspace/apps/core-backend",
        "type=bind,source=${localWorkspaceFolder}/apps/network-worker,target=/workspace/apps/network-worker",
        "type=bind,source=${localWorkspaceFolder}/apps/sotp-agent,target=/workspace/apps/sotp-agent",
        "type=tmpfs,target=/workspace/apps/web-frontend"
    ],

    // NOWA SEKCJA: Automatycznie instaluje Gita wewnątrz kontenera
    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    },


    // Personalizacja środowiska wewnątrz VS Code
    "customizations": {
        "vscode": {
            // Ustawienia, które zostaną zastosowane w VS Code wewnątrz kontenera
            "settings": {
                "files.watcherExclude": {
                    "**/apps/web-frontend/**": true
                },
                "search.exclude": {
                    "**/apps/web-frontend/**": true
                },
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.linting.pylintEnabled": true,
                "python.linting.enabled": true
            },                
            
            // Lista rozszerzeń, które zostaną automatycznie zainstalowane w kontenerze
            "extensions": [
                "ms-python.python",
                "ms-python.black-formatter",
                "ms-python.isort",
                "ms-azuretools.vscode-docker",
                "mtxr.sqltools",
                "mtxr.sqltools-driver-pg"
            ]
        }
    },

    // Komenda do wykonania po stworzeniu kontenera.
    // Zapewnia, że wszystkie zależności są zainstalowane.
    "postCreateCommand": "sh -lc \"find . -type f -name 'requirements*.txt' -size +0c -print0 | sort -z | xargs -0 -n1 pip install -r\""
}
