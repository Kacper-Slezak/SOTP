# .env.example
# Skopiuj ten plik do .env i uzupełnij wartości dla swojego środowiska lokalnego.
# UWAGA: Plik .env NIGDY nie powinien być dodawany do repozytorium Git!

# ####################
# # USTAWIENIA APLIKACJI
# ####################

# Tryb pracy aplikacji (np. dev, prod, staging)
ENVIRONMENT=dev

# Tajny klucz do generowania tokenów JWT. Wygeneruj losowy, silny ciąg znaków.
# Możesz użyć: openssl rand -hex 32
SECRET_KEY=twoj_super_tajny_klucz_zmien_go_koniecznie

# Algorytm używany do podpisywania tokenów JWT
ALGORITHM=HS256

# Czas życia tokenów (w minutach)
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ####################
# # BAZA DANYCH - PostgreSQL (dane inwentaryzacyjne)
# ####################
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=sotp_user
POSTGRES_PASSWORD=bardzo_silne_haslo
POSTGRES_DB=sotp_inventory_db

# Pełny URL do połączenia z bazą danych (używany przez SQLAlchemy)
# Format: postgresql+asyncpg://<user>:<password>@<host>:<port>/<db>
DATABASE_URL=postgresql+asyncpg://sotp_user:bardzo_silne_haslo@postgres:5432/sotp_inventory_db

# ####################
# # BAZA DANYCH - TimescaleDB (dane szeregów czasowych)
# ####################
TIMESCALEDB_HOST=timescaledb
TIMESCALEDB_PORT=5433 # Użyj innego portu, aby uniknąć konfliktu z PostgreSQL
TIMESCALEDB_USER=sotp_ts_user
TIMESCALEDB_PASSWORD=inne_bardzo_silne_haslo
TIMESCALEDB_DB=sotp_metrics_db

# Pełny URL do połączenia z bazą TimescaleDB
TIMESERIES_DATABASE_URL=postgresql+asyncpg://sotp_ts_user:inne_bardzo_silne_haslo@timescaledb:5433/sotp_metrics_db

# ####################
# # REDIS - Cache i Broker dla Celery
# ####################
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD= # Odkomentuj, jeśli ustawisz hasło w konfiguracji Redis

# ####################
# # VAULT - Zarządzanie sekretami
# ####################
# Adres serwera Vault
VAULT_ADDR=http://vault:8200
# Token dla środowiska deweloperskiego (w produkcji użyj AppRole lub innej metody)
VAULT_TOKEN=moj_deweloperski_token_vault

# ####################
# # KANAŁY POWIADOMIEŃ (dla Fazy 3)
# ####################

# Ustawienia serwera SMTP do wysyłania e-maili
SMTP_SERVER=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=

# URL webhooka do wysyłania powiadomień na Slacka
SLACK_WEBHOOK_URL=
